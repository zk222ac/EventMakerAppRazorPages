@page
@model RazorPages_EventMaker.Pages.Events.IndexModel
@{
    ViewData["Title"] = "index";
}

<h1>List of Events</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>City</th>
            <th>Description</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Events)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.City</td>
            <td>@item.Description</td>
            <td>@item.DateTime</td>
         </tr>
        }
    </tbody>
</table>