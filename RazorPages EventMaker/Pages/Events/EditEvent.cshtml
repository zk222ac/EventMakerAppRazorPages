@page
@model RazorPages_EventMaker.Pages.Events.EditEventModel
@{
    ViewData["Title"] = "EditEvent";
}
<h1>Edit Events</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Event.Id"/>
            <div class="form-group">
                <label asp-for="@Model.Event.Name" class="control-label"></label>
                <input asp-for="@Model.Event.Name" class="form-control" placeholder="Enter Name" />
                <span asp-validation-for="@Model.Event.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.Description" class="control-label"></label>
                <input asp-for="@Model.Event.Description" class="form-control" placeholder="Enter Description" />
                <span asp-validation-for="@Model.Event.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.City" class="control-label"></label>
                <input asp-for="@Model.Event.City" class="form-control" placeholder="Enter City" />
                <span asp-validation-for="@Model.Event.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.DateTime" class="control-label"></label>
                <input asp-for="@Model.Event.DateTime" class="form-control" placeholder="Enter Date Time" />
                <span asp-validation-for="@Model.Event.DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="Index"> Back to List</a>
</div>
